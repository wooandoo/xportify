{
	"name": "xportify",
	"version": "1.0.3",
	"license": "MIT",
	"description": "A CLI tool that automatically generates and manages the exports field in package.json for ESM packages",
	"keywords": [
		"cli",
		"esm",
		"exports",
		"package.json",
		"typescript",
		"node",
		"module",
		"subpath-exports"
	],
	"author": "Frédéric Mascaro",
	"repository": {
		"type": "git",
		"url": "https://github.com/wooandoo/xportify"
	},
	"main": "dist/index.js",
	"type": "module",
	"bin": {
		"xportify": "./bin/xportify.js"
	},
	"scripts": {
		"dev": "tsx src/index.ts",
		"build": "tsdown",
		"start": "node dist/index.js",
		"check": "biome check .",
		"fix": "biome check . --write",
		"prepare": "pnpm run build",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"packageManager": "pnpm@10.12.4",
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"tsdown": "^0.12.9",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vitest": "^1.2.1"
	},
	"dependencies": {
		"@types/node": "^24.0.7",
		"chalk": "^5.4.1",
		"commander": "^14.0.0",
		"fast-glob": "^3.3.3"
	}
}
